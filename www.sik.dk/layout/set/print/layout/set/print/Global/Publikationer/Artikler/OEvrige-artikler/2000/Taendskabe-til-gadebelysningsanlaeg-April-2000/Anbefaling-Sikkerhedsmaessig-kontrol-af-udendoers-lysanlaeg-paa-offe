    <!--Content-Begin-->
    <article>
            <h1>Anbefaling - Sikkerhedsmæssig kontrol af udendørs lysanlæg på offentlige steder</h1>
      <summary>
        <p>
                            </p>
      </summary>
      <div class="pull-right social-icons">
<!-- START: including template: extension/sikkerhedsstyrelsen/design/design_2013/templates/partials/body/social_icons.tpl (extension/sikkerhedsstyrelsen/design/design_2013/templates/partials/body/social_icons.tpl) -->
<a href="https://www.facebook.com/sharer/sharer.php?u=https://sik.dk/Global/Publikationer/Artikler/OEvrige-artikler/2000/Taendskabe-til-gadebelysningsanlaeg-April-2000/Anbefaling-Sikkerhedsmaessig-kontrol-af-udendoers-lysanlaeg-paa-offentlige-steder" target="_blank"><i class="fa fa-facebook-square facebook-brand"></i></a>
<a href="http://twitter.com/share?url=https://sik.dk/Global/Publikationer/Artikler/OEvrige-artikler/2000/Taendskabe-til-gadebelysningsanlaeg-April-2000/Anbefaling-Sikkerhedsmaessig-kontrol-af-udendoers-lysanlaeg-paa-offentlige-steder" target="_blank"><i class="fa fa-twitter-square twitter-brand"></i></a>
<a href="https://pinterest.com/pin/create/button/?url=https://sik.dk/Global/Publikationer/Artikler/OEvrige-artikler/2000/Taendskabe-til-gadebelysningsanlaeg-April-2000/Anbefaling-Sikkerhedsmaessig-kontrol-af-udendoers-lysanlaeg-paa-offentlige-steder" target="_blank"><i class="fa fa-pinterest-square pinterest-brand"></i></a>
